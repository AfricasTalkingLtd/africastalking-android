<xyz.belvi.luhn.customTextInputLayout.inputLayouts.BankTextInputLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/date_of_birth"
    android:textColorHint="@color/ln_colorHint"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/ErrorTextStyle"
    app:passwordToggleDrawable="@drawable/password_selector"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="@null"
    app:theme="@style/MyTextInputLayout"
    android:id="@+id/account_dob_layout"
    android:visibility="gone"
    tools:visibility="visible">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/account_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:fontFamily="serif"
        android:inputType="number"
        android:textSize="@dimen/ln_input_size"
        app:theme="@style/MyTextInputEdit" />

</xyz.belvi.luhn.customTextInputLayout.inputLayouts.BankTextInputLayout>

