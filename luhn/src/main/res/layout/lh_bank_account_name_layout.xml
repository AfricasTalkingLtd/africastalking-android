<xyz.belvi.luhn.customTextInputLayout.inputLayouts.BankTextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Account Name"
    android:textColorHint="@color/ln_colorHint"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/ErrorTextStyle"
    app:passwordToggleDrawable="@drawable/password_selector"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="@null"
    app:theme="@style/MyTextInputLayout">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:textSize="@dimen/ln_input_size"
        app:theme="@style/MyTextInputEdit" />

</xyz.belvi.luhn.customTextInputLayout.inputLayouts.BankTextInputLayout>

