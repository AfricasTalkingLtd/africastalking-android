<resources>

    <!-- Base application theme. -->
    <style name="LuhnAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ln_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ln_colorPrimaryDark</item>
        <item name="colorAccent">@color/ln_colorAccent</item>
        <item name="colorControlHighlight">@color/ln_colorControlHighlight</item>
        <item name="actionMenuTextColor">@color/ln_actionMenuTextColor</item>
    </style>

    <style name="LuhnAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="@style/LuhnAppTheme">
        <item name="colorControlHighlight">@color/ln_colorWhite</item>
        <item name="colorControlNormal">@color/ln_colorWhite</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ln_colorError</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextInputLayout" parent="LuhnAppTheme">
        <item name="colorAccent">@color/ln_colorHint</item>
        <item name="android:textColorHint">@color/ln_colorHint</item>
        <item name="colorControlNormal">@color/ln_colorHint</item>
        <item name="colorControlActivated">@color/ln_colorHint</item>
    </style>

    <style name="MyTextInputEdit" parent="MyTextInputLayout">
        <item name="colorControlActivated">@color/ln_colorControlActivated</item>
    </style>

    <style name="ErrorTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/ln_colorError</item>
    </style>

    <style name="loadingStyle" parent="LuhnAppTheme">

        <item name="colorAccent">@color/ln_colorProgress</item>
    </style>

    <style name="LuhnStyle">
        <item name="luhn_title">Add Card</item>
        <item name="luhn_typeface">fonts/ClanMedium.ttf</item>
        <item name="luhn_btn_verify_selector">@drawable/card_next_btn_selector</item>
        <item name="luhn_show_toolbar_color">@color/ln_colorAccent</item>
        <item name="luhn_show_pin">true</item>
    </style>

</resources>
